@model IEnumerable<Responsavel>

<h2 class="mb-4">Lista de Responsáveis</h2>

<a asp-action="Create" class="btn btn-success mb-3">Cadastrar Novo</a>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Valor para Cantina</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Data de Pagamento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.ValorParaCantina.ToString("C")</td>
                <td>@item.Fone</td>
                <td>@item.Email</td>
                <td>@item.DiaPgto</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
